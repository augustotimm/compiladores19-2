{
    "version": "0.2.0",
    "configurations": [
      {
        // for Linux
        "name": "(gdb) Launch cunit",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/etapa3",
        "args": ["<", "teste.txt" ],
        "stopAtEntry": false,
        "cwd": "${workspaceRoot}",
        "environment": [ ],
        "externalConsole": true,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  